<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="LinkAce_Mobile.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:LinkAce_Mobile"
    xmlns:pages="clr-namespace:LinkAce_Mobile.Pages"
    Shell.BackgroundColor="MediumPurple"
    Shell.TitleColor="White"
    Shell.ForegroundColor="White"
    Title="LinkAce_Mobile">

    <FlyoutItem Title="Home"
                FlyoutIcon="home_dark.png">

        <ShellContent ContentTemplate="{DataTemplate local:MainPage}"
                Route="home" />
    </FlyoutItem>

    <FlyoutItem Title="Tags"
                FlyoutIcon="tag.png">
        <ShellContent ContentTemplate="{DataTemplate pages:TagsPage}"
                Route="TagsPage" />
    </FlyoutItem>

    <FlyoutItem Title="Lists"
                FlyoutIcon="list.png">
        <ShellContent ContentTemplate="{DataTemplate pages:ListsPage}"
                Route="ListsPage" />
    </FlyoutItem>

    
    <FlyoutItem Title="Preferences" 
                FlyoutIcon="preferences_dark.png">
        <ShellContent ContentTemplate="{DataTemplate pages:PreferencesPage}"
                Route="PreferencesPage" />
    </FlyoutItem>
    
    

</Shell>
