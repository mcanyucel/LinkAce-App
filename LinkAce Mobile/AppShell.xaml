<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="LinkAce_Mobile.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:LinkAce_Mobile"
    xmlns:pages="clr-namespace:LinkAce_Mobile.Pages"
    Shell.BackgroundColor="MediumPurple"
    Shell.TitleColor="White"
    Shell.ForegroundColor="White"
    Shell.FlyoutBehavior="Disabled"
    Title="LinkAce_Mobile">

    <ShellContent
        ContentTemplate="{DataTemplate local:MainPage}"
        Title="LinkAce"
        Route="MainPage" />

    <ShellContent
        Title="Preferences"
        ContentTemplate="{DataTemplate pages:PreferencesPage}"
        Route="PreferencesPage" />

</Shell>
